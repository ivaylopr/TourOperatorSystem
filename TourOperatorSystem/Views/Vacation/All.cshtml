@model AllVacatinsServiceModel
@inject IAgentService agentService
@{
	ViewData["Title"] = "All active Vacations";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="container">
	<div class="row">
		@foreach (var vacation in Model.Vacations)
		{
			
			<partial name="_VacationPartial" model="@vacation" />
		}
	</div>
</div>

@if (Model.TotalVacationsCount > Model.VacatonsPerPage)
{
	var maxPage = Math.Ceiling((double)Model.TotalVacationsCount /
		Model.VacatonsPerPage);
	<div class="row mt-5">
		<div class="col-md-6 d-flex justify-content-center">
			@if (Model.CurrentPage > 1)
			{
				<a class="btn btn-primary" asp-controller="Vacation" asp-action="All" asp-route-currentPage="@(Model.CurrentPage-1)">Previous</a>
			}
		</div>
		<div class="col-md-6 d-flex justify-content-center">
			@if (Model.CurrentPage < maxPage)
			{
				<a class="btn btn-primary" asp-controller="Vacation" asp-action="All" asp-route-currentPage="@(Model.CurrentPage + 1)">Next</a>

			}
		</div>
	</div>
}