@model AllOffersModel
@inject IAgentService agentService
@{
	ViewBag.Title = "All Job Offers";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<div class="container">
	<div class="row">
		@foreach (var offer in Model.SeasonalEmployments)
		{
			<partial name="_SeasonalEmploymentPartial" model="@offer" />
		}
	</div>
</div>

@if (Model.TotalOffersCount > Model.OfferPerPage)
{
	var maxPage = Math.Ceiling((double)Model.TotalOffersCount /
		Model.OfferPerPage);
	<div class="row mt-5">
		<div class="col-md-6 d-flex justify-content-center">
			@if (Model.CurrentPage > 1)
			{
				<a class="btn btn-primary" asp-controller="Seasonal" asp-action="All" asp-route-currentPage="@(Model.CurrentPage-1)">Previous</a>
			}
		</div>
		<div class="col-md-6 d-flex justify-content-center">
			@if (Model.CurrentPage < maxPage)
			{
				<a class="btn btn-primary" asp-controller="Seasonal" asp-action="All" asp-route-currentPage="@(Model.CurrentPage + 1)">Next</a>

			}
		</div>
	</div>
}

